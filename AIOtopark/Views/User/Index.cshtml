@model FirebaseService.Models.ReservationDetailsModel

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>User Index</title>

    <!-- slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Poppins:400,600,700&display=swap" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/custom-navbar.css" rel="stylesheet" />

    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />

</head>
<body class="bodyRegister">
    
    <section class="contact_section3 layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <form asp-action="deleteReservation" asp-controller="User" method="post">
                    @{
                        if(Model != null)
                        {
                            <div class="card">
                                <h5 class="card-header">Rezervasyon</h5>
                                <div class="card-body">
                                    <h5 class="card-title">Rezervasyon Detayları</h5>
                                    <p class="card-text">Otopark : @Model.plName</p>
                                    <p class="card-text">Park Alanı : @Model.reservatedSpot</p>
                                    <p class="card-text">Tarih : @Model.startDate  @Model.startHour</p>
                                    <p class="card-text">Süre : @Model.range Saat</p>
                                    <p class="card-text">Plaka : @Model.plate</p>
                                    <button type="submit" class="btn btn-danger">Sil</button>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="card">
                                <h5 class="card-header">Rezervasyon Bulunamadı</h5>
                            </div>
                        }
                    }
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>


